# 顶层 EditorConfig 文件
root = true

# 默认配置，适用于所有文件
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown 文件特殊处理（不移除尾部空格）
[*.md]
trim_trailing_whitespace = false

# JSON 文件缩进为 2 个空格
[*.json]
indent_style = space
indent_size = 2

# Makefile 使用 tab 缩进
[Makefile]
indent_style = tab
